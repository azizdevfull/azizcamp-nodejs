<!DOCTYPE html>
<html lang="en">
  <!-- THE HEAD TAG PARTIAL -->
  <%- include("../partials/head") %>

  <body>
    <!-- THE HEADER TAG PARTIAL -->
    <%- include("../partials/header") %>

    <h1>Edit Message Board</h1>

    <form method="POST" action="/projects/<%= project._id %>/message-boards/<%= messageBoard._id %>?_method=PUT">
      <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= messageBoard.name %>" />
      </div>
    
      <button type="submit">Save Changes</button>
    </form>
    
<br>
<a href="/projects/<%= project._id %>/message-boards">Back</a> 

</body>
</html>
